@page "/buscador"
@inherits BuscadorBase
@using ListaDeComprasInteligente.WebApp.Components


@if(IsLoading)
{
	<MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Consultando Preços...</MudText>
	
	<center>
		<MudContainer Class="d-flex justify-space-evenly mt-8 mb-16">
			<MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="110px" />
			<MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="110px" />
			<MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="110px" />
		</MudContainer>
		
		<LoadingSpin />
	</center>
}
else if (ListaComprasResponse is null)
{
	<FormularioBusca OnValidSubmit=@Submit />
}
else
{
	<Resultado ListaComprasResponse=@ListaComprasResponse OnCloseResult=@ClearResponse />  
}